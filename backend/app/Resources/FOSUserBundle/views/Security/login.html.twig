    <style>
        body {
            position: absolute;
            top: 0; bottom: 0; left: 0; right: 0;
            height: 100%;
            margin:0;
            padding:0;
            background-size: 100% ;
            width:100%;
            color:black;
        }
        body:before {
            content: "";
            position: fixed;
            height: 100%; width: 100%;
            background: url({{ asset('images/cover.jpg') }});
            background-size: cover;
            z-index: -1;
            -webkit-filter: blur(6px);
            -webkit-background-size: cover;
